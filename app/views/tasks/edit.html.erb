<h1>Edit Task</h1>
<br>
<br>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control'%>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control'%>
  <%= f.check_box :completed %> Completed
  <%= f.submit class: 'btn btn-primary'%>
<% end %>

<br>
<br>

<%= link_to 'Back to list', tasks_path %>

